<?xml version="1.0" encoding="utf-8"?>
<com.avatar.personate.ListeningView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--<TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/wave"/>-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/anim_listen"
            android:layout_width="250px"
            android:layout_height="250px"
            android:layout_centerInParent="true" />

        <Button
            android:id="@+id/btn_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="100px"
            android:layout_toLeftOf="@id/anim_listen"
            android:background="@drawable/btn_home_select" />

        <Button
            android:id="@+id/btn_keyboard_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="100px"
            android:layout_toRightOf="@id/anim_listen"
            android:background="@drawable/btn_question_select" />
    </RelativeLayout>

</com.avatar.personate.ListeningView>