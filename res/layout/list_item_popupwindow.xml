<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="1260px"
    android:layout_height="780px"
    android:background="@drawable/pop_bg"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/alert_dialog_cancel"
        android:layout_width="wrap_content"
        android:layout_height="121px"
        android:layout_gravity="right"
        android:layout_marginRight="30px"
        android:src="@drawable/btn_closed" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/alert_dialog_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="70px"
            android:layout_marginLeft="70px"
            android:layout_marginRight="70px"
            android:layout_weight="1.0"
            android:gravity="center_vertical"
            android:lineSpacingExtra="20px"
            android:textColor="#4d4d4d"
            android:textSize="80.0px" />
    </ScrollView>

</LinearLayout>