<?xml version="1.0" encoding="utf-8"?>
<com.avatar.personate.SpeakView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/speak_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />

        <Button
            android:id="@+id/btn_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="100px"
            android:layout_toLeftOf="@id/speak_icon"
            android:background="@drawable/btn_home_select" />

        <Button
            android:id="@+id/btn_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="100px"
            android:layout_toRightOf="@id/speak_icon"
            android:background="@drawable/btn_question_select"
            android:clickable="false" />
    </RelativeLayout>

</com.avatar.personate.SpeakView>
