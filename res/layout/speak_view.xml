<?xml version="1.0" encoding="utf-8"?>
<com.avatar.personate.SpeakView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/btn_home_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="660px"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_home_select"/>

        <ImageView
            android:id="@+id/speak_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/btn_home_2"
            android:layout_marginLeft="100px"
            android:layout_centerVertical="true"/>

        <Button
            android:id="@+id/btn_question_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/speak_icon"
            android:layout_marginLeft="100px"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_question_select"/>
    </RelativeLayout>

</com.avatar.personate.SpeakView>