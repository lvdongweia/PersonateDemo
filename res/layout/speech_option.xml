<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">
        <Button
            android:id="@+id/understand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="@string/understand"/>

        <EditText
            android:ems="10"
            android:id="@+id/nlu_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/speech_input_empty"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/debug_level"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/debug_level"/>

        <Spinner
            android:id="@+id/spinner_debug"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawSelectorOnTop="true"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialet"/>

        <Spinner
            android:id="@+id/spinner_dialect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawSelectorOnTop="true"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_alignLeft="@id/debug_level"
        android:layout_alignRight="@id/debug_level"
        android:layout_alignStart="@id/debug_level"
        android:layout_alignEnd="@id/debug_level"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/asr_status"/>

        <EditText
            android:id="@+id/asr_status"
            style="@style/StatusStyle"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tts_status"/>

        <EditText
            android:id="@+id/tts_status"
            style="@style/StatusStyle"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nlu_status"/>

        <EditText
            android:id="@+id/nlu_status"
            style="@style/StatusStyle"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/help"
            android:visibility="gone"/>

        <Button
            android:id="@+id/clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/clear"/>

        <Button
            android:id="@+id/speak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/speak"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/ctrl_asr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ctrl_asr"/>

        <Button
            android:id="@+id/ctrl_nlu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ctrl_nlu"/>

        <Button
            android:id="@+id/ctrl_tts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ctrl_tts"/>
    </LinearLayout>
</LinearLayout>
